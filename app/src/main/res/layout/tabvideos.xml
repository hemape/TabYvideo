<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lineraLayoutVideos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hector.tabbueno.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_margin="20dp"
        android:id="@+id/layout_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/videoView_video"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/layout_ratingbar"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/espacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:numStars="5" />

            <TextView
                android:id="@+id/espacio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Comentarios:"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/espacio3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtComentarios"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios12"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios11"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios10"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios9"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios8"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios7"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios6"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios5"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios4"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios3"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />

                    <TextView
                        android:id="@+id/txtComentarios2"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Soy un comentario" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>